FROM golang:1.14 AS builder

WORKDIR /go/src/github.com/websu-io/websu
COPY go.mod go.sum ./
# Download dependencies and cache in docker layer
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build ./cmd/lighthouse-server && mv lighthouse-server /

FROM debian:buster-slim

ENV USE_DOCKER=false

# Install deps + add Chrome Stable + purge all the things
RUN apt-get update && apt-get install -y \
  apt-transport-https \
  ca-certificates \
  curl \
  gnupg \
  --no-install-recommends \
  && curl -sSL https://deb.nodesource.com/setup_12.x | bash - \
  && curl -sSL https://dl.google.com/linux/linux_signing_key.pub | apt-key add - \
  && echo "deb https://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list \
  && apt-get update && apt-get install -y \
  google-chrome-stable \
  fontconfig \
  fonts-ipafont-gothic \
  fonts-wqy-zenhei \
  fonts-thai-tlwg \
  fonts-kacst \
  fonts-symbola \
  fonts-noto \
  fonts-freefont-ttf \
  nodejs \
  --no-install-recommends \
  && apt-get purge --auto-remove -y curl gnupg \
  && rm -rf /var/lib/apt/lists/*


ARG LH_VERSION="7.2.0"
RUN npm install -g lighthouse@$LH_VERSION

WORKDIR /websu

COPY --from=builder /lighthouse-server /websu/lighthouse-server

ENTRYPOINT ["/websu/lighthouse-server"]
EXPOSE 50051/tcp
